import sqlite3
import string
from cheminBD import bazi
from fpdf import FPDF, XPos, YPos

# Nombre enregistrement tVIL
connection = sqlite3.connect(bazi)
cursor = connection.cursor()
#cursor.execute("SELECT COUNT(*) FROM tMOIS")
cursor.execute("SELECT COUNT(*) FROM tVIL")
nb = cursor.fetchone()[0] # nb d'éléments
print(nb)
b = nb // 3 # nb de lignes
print(b)
a = nb % 3  # nb restant d'éléments pour la dernière ligne
print(a)
cursor.close()

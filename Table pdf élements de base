import sqlite3
import string
from fpdf import FPDF

# Nombre enregistrement tMOIS
connection = sqlite3.connect(ma_base.sqlite3)
cursor = connection.cursor()
cursor.execute("SELECT COUNT(*) FROM tMOIS")
nb = cursor.fetchone()[0] # nb d'éléments
print(nb)
b = nb // 3 # nb de lignes
print(b)
a = nb % 3  # nb restant d'éléments pour la dernière ligne
print(a)
cursor.close()
